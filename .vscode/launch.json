{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Nest Framework",
            "args": [
                "${workspaceFolder}/s-crapr-server/src/main.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "sourceMaps": true,
            "envFile": "${workspaceFolder}/s-crapr-server/.env",
            "cwd": "${workspaceRoot}/s-crapr-server/",
            "console": "integratedTerminal",
            "protocol": "inspector"
        }
    ]
  }